    <view>
      <input placeholder='请输入公司' style='background:#eeee;border-radius:10px;height:{{0.06*height}}px'></input>
    </view>
    <view class='content' style="height:{{height*0.8}}px;">
      <block wx:for="{{arr}}" wx:key="arr" wx:for-item="item" >
        <view class='compIcn' animation='{{animationData}}' bindtap='onShowCanvas' style='margin:{{item.margin}}px;width:{{item.width}}px;height:{{item.width}}px;background:{{item.color}}'></view>
      </block>
    </view>
</view>